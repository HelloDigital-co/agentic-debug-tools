{
    "name": "Run Tests After Changes",
    "version": "1.0.0",
    "description": "Run the test suite after Python files in the package are modified",
    "when": {
        "type": "fileEdited",
        "patterns": [
            "flask_error_tracker/*.py"
        ]
    },
    "then": {
        "type": "runCommand",
        "command": "python -m pytest tests/ -x -q 2>&1 | tail -20"
    }
}
